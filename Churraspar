KOTLIN -------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
package com.example.churraspar

import android.os.Bundle
import android.widget.Button
import android.widget.EditText
import android.widget.TextView
import androidx.appcompat.app.AppCompatActivity
import br.unipar.churraspar.R
import kotlin.math.ceil

class MainActivity : AppCompatActivity() {

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)


        val homensInput = findViewById<EditText>(R.id.txthomens)
        val mulheresInput = findViewById<EditText>(R.id.edittxtmulheres)
        val criancasInput = findViewById<EditText>(R.id.edittxtcriaca)


        val calcularButton = findViewById<Button>(R.id.btnCalcular)
        val limparButton = findViewById<Button>(R.id.btnZerar)


        val resultadoText = findViewById<TextView>(R.id.txtresultado)
        val carneText = findViewById<TextView>(R.id.txtcarne)
        val aperitivosText = findViewById<TextView>(R.id.txtaperitivos)
        val cervejaText = findViewById<TextView>(R.id.txtcerveja)
        val aguaText = findViewById<TextView>(R.id.txtagua)
        val refriText = findViewById<TextView>(R.id.txtrefri)


        calcularButton.setOnClickListener {
            val numHomens = homensInput.text.toString().toIntOrNull() ?: 0
            val numMulheres = mulheresInput.text.toString().toIntOrNull() ?: 0
            val numCriancas = criancasInput.text.toString().toIntOrNull() ?: 0


            val carneHomens = numHomens * 400
            val carneMulheres = numMulheres * 300
            val carneCriancas = numCriancas * 200
            val carneTotal = (carneHomens + carneMulheres + carneCriancas) * 1.1


            val aperitivosHomens = numHomens * 150
            val aperitivosMulheres = numMulheres * 100
            val aperitivosCriancas = numCriancas * 50
            val aperitivosTotal = (aperitivosHomens + aperitivosMulheres + aperitivosCriancas) * 1.1


            val cervejaHomens = numHomens * 4.0
            val cervejaMulheres = numMulheres * 2.0
            val cervejaTotal = (cervejaHomens + cervejaMulheres) * 1.1

            val aguaTotal = (numMulheres * 2.0 + numCriancas * 2.0) * 1.1

            val refriTotal = (numMulheres * 1.5 + numCriancas * 1.5) * 1.1

            carneText.text = "Carne: ${ceil(carneTotal / 1000)} kg"
            aperitivosText.text = "Aperitivos: ${ceil(aperitivosTotal / 1000)} kg"
            cervejaText.text = "Cerveja: ${ceil(cervejaTotal)} L"
            aguaText.text = "Água: ${ceil(aguaTotal)} L"
            refriText.text = "Refrigerante: ${ceil(refriTotal)} L"

            resultadoText.text = "Cálculo completo!"
        }

        limparButton.setOnClickListener {
            homensInput.setText("")
            mulheresInput.setText("")
            criancasInput.setText("")

            carneText.text = ""
            aperitivosText.text = ""
            cervejaText.text = ""
            aguaText.text = ""
            refriText.text = ""
            resultadoText.text = ""

            resultadoText.text = "Valores resetados."
        }
    }
}
